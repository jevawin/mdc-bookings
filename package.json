{
	"name": "mdc-bookings",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "cross-env NODE_ENV=production npm run build-storybook && react-router build",
		"dev": "cross-env NODE_ENV=development react-router dev",
		"deploy": "wrangler deploy",
		"preview": "npm run build && vite preview",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
		"lint:css": "stylelint \"./**/*.{css,scss}\" --fix",
		"new:c": "cross-env HYGEN_TMPLS=generators hygen new component",
		"new:r": "cross-env HYGEN_TMPLS=generators hygen new route",
		"format": "prettier \"*/**/*.{js,jsx,ts,tsx,json,md,css,scss}\" --write",
		"formatw": "prettier \"{,!(node_modules)/**/}*.js\"",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build -o ./public/storybook",
		"prepare": "husky",
		"cf-typegen": "wrangler types"
	},
	"dependencies": {
		"@react-router/node": "^7.6.0",
		"@react-router/serve": "^7.6.0",
		"calendar-link": "^2.10.0",
		"clsx": "^2.1.1",
		"isbot": "^5.1.28",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router": "^7.6.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.6",
		"@cloudflare/vite-plugin": "^1.2.4",
		"@cloudflare/workers-types": "^4.20250523.0",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@react-router/dev": "^7.6.0",
		"@storybook/addon-essentials": "^8.6.14",
		"@storybook/addon-onboarding": "^8.6.14",
		"@storybook/blocks": "^8.6.14",
		"@storybook/experimental-addon-test": "^8.6.14",
		"@storybook/react": "^8.6.14",
		"@storybook/react-vite": "^8.6.14",
		"@storybook/test": "^8.6.14",
		"@types/node": "^22.15.21",
		"@types/react": "^19.1.5",
		"@types/react-dom": "^19.1.5",
		"@vitest/browser": "^3.1.4",
		"@vitest/coverage-v8": "^3.1.4",
		"autoprefixer": "^10.4.21",
		"cross-env": "^7.0.3",
		"husky": "^9.1.7",
		"hygen": "^6.2.11",
		"lint-staged": "^16.0.0",
		"playwright": "^1.52.0",
		"postcss-preset-env": "^10.1.6",
		"prettier": "^3.5.3",
		"react-router-devtools": "^5.0.6",
		"react-router-dom": "^7.6.0",
		"storybook": "^8.6.14",
		"stylelint": "^16.19.1",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-order": "^7.0.0",
		"stylelint-use-logical": "^2.1.2",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.4",
		"wrangler": "^4.16.1",
		"zod": "^3.25.23"
	},
	"engines": {
		"node": ">=20"
	}
}
