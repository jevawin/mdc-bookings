{
	"name": "mdc-bookings",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "cross-env NODE_ENV=production npm run build-storybook && react-router build",
		"dev": "cross-env NODE_ENV=development react-router dev",
		"deploy": "wrangler deploy",
		"preview": "npm run build && vite preview",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
		"lint": "run-p lint:*",
		"lint:css": "stylelint \"./**/*.{css,scss}\" --fix",
		"lint:js": "eslint \"*/**/*.{js,jsx,ts,tsx}\" --fix",
		"lint:ts": "tsc -p tsconfig.json --noEmit",
		"new:c": "cross-env HYGEN_TMPLS=generators hygen new component",
		"new:r": "cross-env HYGEN_TMPLS=generators hygen new route",
		"format": "prettier \"*/**/*.{js,jsx,ts,tsx,json,md,css,scss}\" --write",
		"formatw": "prettier \"{,!(node_modules)/**/}*.js\"",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build -o ./public/storybook",
		"prepare": "husky",
		"cf-typegen": "wrangler types"
	},
	"dependencies": {
		"@react-router/node": "^7.6.3",
		"@react-router/serve": "^7.6.3",
		"calendar-link": "^2.11.0",
		"clsx": "^2.1.1",
		"isbot": "^5.1.28",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router": "^7.6.3"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.0.1",
		"@cloudflare/vite-plugin": "^1.9.0",
		"@cloudflare/workers-types": "^4.20250705.0",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/compat": "^1.3.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.30.1",
		"@react-router/dev": "^7.6.3",
		"@storybook/addon-docs": "^9.0.15",
		"@storybook/addon-onboarding": "^9.0.15",
		"@storybook/addon-vitest": "^9.0.15",
		"@storybook/react-vite": "^9.0.15",
		"@types/node": "^24.0.10",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"cross-env": "^7.0.3",
		"eslint": "^9.30.1",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-storybook": "^9.0.15",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"hygen": "^6.2.11",
		"lint-staged": "^16.1.2",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.53.2",
		"postcss-preset-env": "^10.2.4",
		"prettier": "^3.6.2",
		"react-router-devtools": "^5.0.6",
		"react-router-dom": "^7.6.3",
		"storybook": "^9.0.15",
		"stylelint": "^16.21.1",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-order": "^7.0.0",
		"stylelint-use-logical": "^2.1.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"wrangler": "^4.23.0",
		"zod": "^3.25.74"
	},
	"engines": {
		"node": ">=20"
	},
	"overrides": {
		"storybook": "$storybook"
	}
}
